# See http://EditorConfig.org for details

root = true

# Tab indenting is preferred
[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Some implementations of Yaml does not allow tab characters, so use spaces
[**/*.yml]
indent_style = space
indent_sizei = 2
