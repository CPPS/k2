<h2 class="page-title">Log in</h2>

<p class="pad-top"> TU/e students can use their s-number and TU/e password to log in.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="field pad-top-l">
		<%= f.label :login %><br />
		<%= f.text_field :login, autofocus: true, autocomplete:
			"username" %>
	</div>

	<div class="field pad-top-l">
		<%= f.label :password %><br />
		<%= f.password_field :password, autocomplete: "off" %>
	</div>

	<% if devise_mapping.rememberable? -%>
		<div class="field pad-top-l">
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
	<% end -%>

	<div class="actions pad-top-l">
		<%= f.submit "Log in" %>
	</div>
<% end %>
<div class="pad-top-l"/>
<%= render "devise/shared/links" %>
